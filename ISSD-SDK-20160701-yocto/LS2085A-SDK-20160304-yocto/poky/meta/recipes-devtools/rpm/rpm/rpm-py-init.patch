     if (Py_AtExit(rpm_exithook) == -1)
 	return;
 
-    rpmReadConfigFiles(NULL, NULL);
+    const char *argv[1] = {"rpmmodule", 0};
+    rpmcliInit(1, argv, NULL);
 
